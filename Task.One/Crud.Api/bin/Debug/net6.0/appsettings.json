{
  "ConnectionStrings": {
    "DefaultConnection": "Server = .\\SQLEXPRESS; Database = Test_crud; Trusted_Connection = True;TrustServerCertificate=True;
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
